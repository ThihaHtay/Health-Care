<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookingActivity">

    <EditText
        android:id="@+id/doctor_name_update_edt"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginTop="100dp"
        android:hint="Enter Doctor Name" />

    <EditText
        android:id="@+id/doctor_address_update_edt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:hint="Enter Doctor Address" />


    <EditText
        android:id="@+id/doctor_phoneno_update_edt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:hint="Enter Doctor Phone Number" />

    <EditText
        android:id="@+id/doctor_experience_update_edt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:hint="Enter Doctor Experience"/>

    <EditText
        android:id="@+id/doctor_fee_update_edt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:hint="Enter Doctor Fee" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/bookdatetxt"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:text="Select Date"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/booktimetxt"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:text="Select Time"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/book_date_txt"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:text="22/7/23"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/book_time_txt"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:text="10:00"
            android:textSize="20dp" />

    </LinearLayout>


    <Button
        android:id="@+id/booking_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="Booking" />

</LinearLayout>