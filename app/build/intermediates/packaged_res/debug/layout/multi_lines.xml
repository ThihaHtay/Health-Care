<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:background="@color/black"

    android:layout_height="match_parent">

    <TextView
        android:id="@+id/doctor_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/doctor_address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#fff000"
        android:textSize="16sp"
        android:textStyle="italic"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/doctor_experince_tv"
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:text="TextView"
            android:textColor="#ffff66"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/doctor_phoneno_tv"
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:text="TextView"
            android:textColor="#ffff66"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/doctor_fee_tv"
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:text="TextView"
            android:textColor="#ffff66"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/doctor_update_btn"
            android:layout_weight="0.5"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="Update"/>

        <Button
            android:id="@+id/doctor_delete_btn"
            android:layout_weight="0.5"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="Delete"/>



    </LinearLayout>



</LinearLayout>